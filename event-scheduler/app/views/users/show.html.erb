<h3><%= @user.username %> </h3>
<% if @user.events.length == 1 %>
<p>This user has created 1 event.</p>
<% else %>
<p>This user has created <%=@user.events.length %> events.</p>
<% end %>
<%@user.events.each do |event|%>
<hr>
<p><strong><%= link_to event.name, event_path(event)%></a></strong></p>
<p>Location: <%=event.location%></p>
<p><%=event.date%>,<%= event.formatted_time%></p>
<%end%>
</br>
